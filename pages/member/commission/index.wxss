/* pages/member/commission/index.wxss */
Page {
  background: #ffffff;
}
.container {
  background: #ffffff;
}
.commission {
  width :100%;
  padding-top: 1rpx;
  background: #ffffff;
}
.commission_top {
  width: 700rpx;
  height: 300rpx;
  box-shadow: 0 0 10rpx 0 #ccc;
  margin: 25rpx 25rpx 0;
  border-radius: 6rpx;
  position: relative;
  background: #ffffff;
}
.commission_top_tit {
  width: 100%;
  line-height: 40rpx;
  text-align: center;
  position: relative;
  padding-top: 35rpx;
}
.commission_top_tit_text {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #b3b3b3;
}
.commission_top_tit_mx {
  position: absolute;
  right: 5rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 0 25rpx;
  color: #1f1f1f;
  top: 35rpx;
}
.commission_top_pri {
  width: 100%;
  padding-top: 30rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 48rpx;
  color: #f25c5c;
}
.commission_top_pri text {
  font-size: 72rpx;
}
.commission_top_ipt {
  position: absolute;
  width: 340rpx;
  height: 90rpx;
  background: #ffffff;
  left: 181rpx;
  bottom: -45rpx;
}
.commission_top_pri_btn {
  width: 320rpx;
  height: 80rpx;
  background: #546571;
  margin: 5rpx auto;
  border-radius: 40rpx;
  text-align: center;
  color: #fef9da;
  font-size: 32rpx;
  line-height: 80rpx;
}
.commission_nav {
  width: 700rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  border-bottom: 4rpx solid #f0f0f0;
  margin-top: 100rpx;
}
.commission_nav_text {
  float: left;
  line-height: 80rpx;
  color: #1f1f1f;
  font-size: 32rpx;
}
.commission_nav_next {
  line-height: 80rpx;
  float: right;
  color: #ffa000;
  font-size: 24rpx;
}

.commission_main_li {
  width: 700rpx;
  margin: 0 auto;
  color: #1f1f1f;
  font-size: 24rpx;
  background: #ffffff;
  padding: 10rpx 0;
}
.commission_main .active {
  background: #fef9da;
}
.commission_main_li_l {
  height: 100rpx;
  float: left;
  width: 500rpx;
  margin-left: 20rpx;
}
.commission_main_li_l_tit {
  width :100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #1f1f1f; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.commission_main_li_l_time {
  width :100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  color: #1f1f1f; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.commission_main_li_pri {
  float: right;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #f25c5c;
  margin-right: 20rpx;
}

.commission_main_img {
  width: 100%;

}
.commission_main_img image {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin: 100rpx auto 0;
}
.commission_main_img_text {
  text-align: center;
  width: 100%;
  line-height: 80rpx;
  color: #b3b3b3;
  font-size: 28rpx;
}