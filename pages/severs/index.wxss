/* pages/severs/index/index.wxss */
/*搜索*/
.search-bar {width: 100%;padding: 18rpx 30rpx 0;line-height: 64rpx;}
.search-box {padding: 0 30rpx;border-radius: 6rpx;}
.search-box input {height: 64rpx;line-height: 64rpx;}
.search-bar .input-inner {position: relative;}
.search-show {position: absolute;top: 0;left: 0;right: 0;bottom: 0;margin: auto;width: 100%;height: 100%;z-index: 2;border-radius: 6rpx;}
/*搜索按钮*/
.searchbtn {margin-right: -30rpx;}
/*分类*/
.fenlei swiper-item{padding: 30rpx 0;}
.classify-list {width: 25%;color: #123456;float: left;}
.classify-list:nth-child(n+5) {margin-top: 20rpx;}
.classify-list .list-img {display: inline-block;width: 90rpx;height: 90rpx;line-height: 90rpx;border-radius: 50%;margin-bottom: 8rpx;}
.classify-list:active {-webkit-filter: brightness(0.8);filter: brightness(0.8);}
/*广告位 图片尺寸宽高比5：2  */
.adsense {position: relative;padding: 0 20rpx;height: 284rpx;overflow: hidden;}
.ad-img {width: 710rpx;border-radius: 10rpx;height: 100%;}
.ad-text {position: absolute;right: 20rpx;bottom: 0;padding: 0 10rpx;}
/*排序*/
.paixu {line-height: 1.5;padding: 20rpx 0;}
.paixu .active {position: relative;overflow: visible;}
.paixu .active::after {content: '';display: block;width: 70%;height: 4rpx;position: absolute;bottom: -20rpx;left: 0;right: 0;margin: auto;}

/*我要发布*/
.add-msg {position: fixed;bottom: 80rpx;right: 40rpx;z-index: 99;}
.add-msg .add {width: 90rpx;height: 90rpx;line-height: 90rpx;border-radius: 50%;background: #c7131d !important}

.wx-swiper-dot{background: transparent !important;border:1rpx solid #ddd;}
.wx-swiper-dot-active{background: rgba(0, 0, 0, 0.2) !important;}
page .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 0;height: 36rpx;}

