/* pages/severs/frds_nearby.wxss */

.user-info {
    background-color: white;
    margin-bottom: 30rpx;
    padding-top: 90rpx;
    box-sizing: content-box;
}

.user-info .avatar {
    display: block;
    width: 256rpx;
    height: 256rpx;
    border: 5px solid #f0f0f0;
    border-radius: 50%;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 30rpx;
    overflow: hidden;
    box-shadow: 1px 3px 3px #aaa;
}

.user-info .nickname {
    text-align: center;
    padding: 10rpx 20rpx;
    font-weight: bold;
    font-family: '微软雅黑';
    font-size: 16px;
    color: #667;
}

.user-info .user-row {
    position: relative;
    display: table;
    width: 100%;
    table-layout: fixed;
}

.user-info .user-row .user-row-item {
    position: relative;
    display: table-cell;
    text-align: center;
    vertical-align: top;
    padding: 10rpx;
}

.user-info .user-row .user-row-item .title {
    display: block;
    font-weight: bold;
    color: #667;
}

.user-info .user-row .user-row-item .remark {
    display: block;
    color: #888;
}
@import "list_tpl.wxss";
@import "/css/EKInfo/EKInfo-template-default.wxss";
