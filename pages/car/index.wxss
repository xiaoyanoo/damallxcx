/* pages/goods/index.wxss */
.Container{
  width: 100%;
  height: 100%;
  padding-bottom: 88rpx;
  background: #f0f0f0;
}
.car_box {
  width: 100%;
}
.car_box_li { 
  border-bottom: 20rpx solid #f0f0f0;
  background: #ffffff;
}
.car_box_li_store {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.car_box_li_store_icon {
  width: 80rpx;
  height: 80rpx;
  float: left;
}
.car_box_li_store_icon .image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 22rpx;
  margin-top: 22rpx;
}
.car_box_li_store_con {
  height: 80rpx;
  box-sizing: border-box;
  width: 670rpx;
  float: left;
  border-bottom: 1px solid #f0f0f0;
}
.car_box_li_store_con_icon {
  width: 60rpx;
  height: 54rpx;
  float: left;
  margin-top: 13rpx;
  margin-left: 5rpx;
}
.car_box_li_store_con_icon image {
  width: 100%;
  height: 100%;
  float: left;
}
.car_box_li_store_con_name {
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #1f1f1f;
  margin-left: 20rpx;
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.car_box_li_store_con_del {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  float: right;
}
.car_box_li_store_con_del image {
  width: 44rpx;
  height: 44rpx;
  float: left;
  margin-left: 17rpx;
  margin-top: 17rpx;
}

.car_box_li_goods_li {
  width: 100%;
  height: 210rpx;
  position: relative;
}
.car_box_li_goods_li_icon {
  width: 80rpx;
  height: 80rpx;
  margin-top: 65rpx;
  float: left;
}
.car_box_li_goods_li_icon image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 22rpx;
  margin-top: 22rpx;
}
.car_box_li_goods_li_con {
  height: 210rpx;
  box-sizing: border-box;
  width: 670rpx;
  float: left;
  border-bottom: 1px solid #f0f0f0;
}
.car_box_li_goods_li:last-child .car_box_li_goods_li_con {
  border-bottom: 0px solid #f0f0f0;

}
.car_box_li_goods_li_con_img {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-top: 35rpx;
  overflow: hidden;
  border: 1px solid #f0f0f0;
}
.car_box_li_goods_li_con_img image {
  width: 100%;
  height: 100%;
  float: left;
}
.car_box_li_goods_li_con_main {
  width: 520rpx;
  float: left;
  height: 210rpx;
  box-sizing: border-box;
  padding: 35rpx 20rpx;
}
.car_box_li_goods_li_con_main_tit {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #1f1f1f;
}
.car_box_li_goods_li_con_main_style {
  width: 230rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 10rpx;
  color: #1f1f1f;
}
.car_box_li_goods_li_con_main_pri {
  width: 230rpx;
  margin-top: 10rpx;
  font-size: 36rpx;
  color: #f25c5c;
}
.add_box {
  position: absolute;
  width: 245rpx;
  height: 60rpx;
  line-height: 60rpx;
  bottom: 35rpx;
  right: 25rpx;
  border: 1px solid #cccccc;
  border-radius: 6rpx;
  overflow: hidden;
}
.add_box_add,.add_box_del {
  float: left;
  width: 60rpx;
  height: 60rpx;
  font-size: 40rpx;
  color: #585858;
  text-align: center;
  line-height: 60rpx;
  background: #f8f8f8;
  box-sizing: border-box;
}
.add_box_add {
  border-left: 1px solid #cccccc;
}
.add_box_del {
  border-right: 1px solid #cccccc;
}
.add_box_ipt {
   float: left;
  width: 120rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #1f1f1f;
  text-align: center;
  line-height: 60rpx;
}


.car_bottom {
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
}
.car_bottom_pay {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fef9da;
  background: #546571;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}
.car_bottom_all {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #1f1f1f;
  background: #ffffff;
  text-align: center;
  float: left;
}
.car_bottom_all image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.car_bottom_pri {
  float: left;
  width: 310rpx;
  text-align: center;
}
.car_bottom_pri_text {
  display: inline-block;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #1f1f1f;
}
.car_bottom_pri_text text {
  color: #f25c5c;
}
.car_bottom_pri_num {
  display: inline-block;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #f25c5c;
}
